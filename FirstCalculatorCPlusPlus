#include <iostream>
using namespace std;
int main() {
  // declare double
  double num1, num2, num3;
  // declare char
  char symbol;
  while (0 == 0) {
    cout << "\n\n";
    // print
    cout << "Enter Equation: ";
    //take input and feed into
    cin >> num1;
    cin >> symbol;
    cin >> num2;
    // checks what symbol is to do equation
    switch (symbol) {
      case '*':
        cout << "Answer: " << (num1 * num2);
        break;
      case '/':
        if (num2 == 0)
          cout << "Devided By Zero";
        else
          cout << "Answer: " << (num1 / num2);
        break;
      case '+':
        cout << "Answer: " << (num1 + num2);
        break;
      case '-':
        cout << "Answer: " << (num1 - num2);
        break;
      default:
        cout << "Invalid Operator";
      }
      //prints answer
   }
  return 0;
  }
