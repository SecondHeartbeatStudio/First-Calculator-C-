#include <iostream>
#include <limits>
using namespace std;
int main() {
  // declare double
  double num1, num2, num3;
  // declare char
  char symbol;
  while (0 == 0) {
    cout << "\n\n";
    // print
    cout << "Enter Equation: ";
    //take input and feed into
    cin >> num1;
    cin >> symbol;
    cin >> num2;
    // checks what symbol is to do equation
    if (symbol == '*')
      num3 = num1 * num2;
    else if (symbol == '/')
      num3 = num1 / num2;
    else if (symbol == '+')
      num3 = num1 + num2;
    else if (symbol == '-')
      num3 = num1 - num2;
    else
      cout << "Invalid Equation\n";
      //checks if infinite
    if (num3 == num3 && num3 - 1 == num3)
      cout << "Devided By Zero";
      //prints answer
    else
      cout << "Answer is: " << num3;
   }
  return 0;
  }
